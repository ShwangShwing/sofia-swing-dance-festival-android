<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sofiaswing.sofiaswingdancefestival">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:name=".SofiaSwingDanceFestivalApplication"
        android:allowBackup="true"
        android:icon="@drawable/sofiaswinglogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sofiaswinglogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.news.NewsActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.newsArticle.NewsArticleActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".views.instructors.InstructorsActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".views.instructorDetails.InstructorDetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".views.venues.VenuesActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>