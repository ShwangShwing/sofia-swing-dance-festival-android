<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/mainBackground</item>
    </style>

    <style name="Title" parent="AppTheme">
        <item name="android:textSize">32dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NewsArticle" parent="AppTheme">
        <item name="android:padding">4dp</item>
    </style>

    <style name="NewsArticleImage" parent="AppTheme">
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="NewsArticleDate" parent="AppTheme">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NewsArticleContent" parent="AppTheme">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="InstructorName" parent="AppTheme">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="InstructorType" parent="AppTheme">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="InstructorDescription" parent="AppTheme">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="VenueName">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="VenueAddress">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="VenueDistance">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
