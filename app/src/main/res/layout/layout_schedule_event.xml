<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/pendingEventBackground"
        android:id="@+id/ll_event_container"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDate"/>

            <ImageView
                android:paddingLeft="2dp"
                android:id="@+id/ivIsSubscribed"
                android:src="@drawable/ic_trompet_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="15dp"
                android:visibility="gone"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <ImageView
                android:paddingLeft="2dp"
                android:id="@+id/ivIsNotSubscribed"
                android:src="@drawable/ic_trompet_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="15dp"
                android:visibility="gone"
                tools:ignore="ContentDescription,RtlHardcoded" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
