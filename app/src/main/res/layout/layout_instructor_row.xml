<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:orientation="horizontal"
    style="@style/NewsArticle">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivInstructorImage"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:scaleType="centerInside"
            android:src="@drawable/newsarticleplaceholderimage" />
        <ProgressBar
            android:id="@+id/pbInstructorImageLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInstructorName"
            style="@style/InstructorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor name not loaded!" />

        <TextView
            android:id="@+id/tvInstructorType"
            style="@style/InstructorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main or taster insructor" />

        <!--<TextView-->
            <!--android:id="@+id/tvInstructorDescription"-->
            <!--style="@style/InstructorDescription"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Instructor description not loaded!" />-->
    </LinearLayout>
</LinearLayout>